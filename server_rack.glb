const server = await loader.loadModel('assets/models/devices/server_rack.glb');

// Server status lights
server.traverse(child => {
  if (child.name.includes('LED')) {
    child.material.emissive = new THREE.Color(0xff0000);
    child.material.emissiveIntensity = 0.8;
  }
});

// Blinking animation
setInterval(() => {
  server.traverse(child => {
    if (child.name.includes('LED')) {
      child.material.emissiveIntensity = Math.random() > 0.5 ? 0.8 : 0.2;
    }
  });
}, 500);